<% if @question.errors.any? %>
    <% @question.errors.full_messages.each do |msg| %>
        $('.questions-errors').html('<%= j msg %>');
    <% end %>
<% else %>
    $("#notice").html("<%=j flash[:notice] %>");
    $('.questions').html('<%= j render 'questions/questions'%>');
    $('#question_title, #question_body').val('');
<% end %>
